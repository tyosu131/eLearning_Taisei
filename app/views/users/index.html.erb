<%  provide(:title, "Users list") %>
<div class="form content">
    <h1 class="text-center">List of Users</h1>
    <div class="container">
        <div class="row py-4">
            <div class="col-6 my-2">
                <ul class="users">
                    <% @users.each do |user| %>
                        
                        <li>
                            <%= gravatar_for user, size: 52 %>
                            <%= link_to user.name, user %>
                            <% if admin_user? %>
                                <%= link_to 'delete', user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class:"text-danger" %>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
        <%= will_paginate %>
    </div>
</div>